.gamepad-icon
  display none
  opacity 0.1
  width 45px

#controller
  position fixed
  width 90%
  padding 1em
  background silver
  border 4px inset #969696
  border-radius 10px
  left 0
  margin 0 auto
  bottom 0
  opacity 0
  transform translateY(200px)
  transition all 0.1s ease-in
  will-change transform
  &.revealed
    transform translateY(0px)
    opacity 1
    transition all 0.75s ease-out
    will-change transform
  @media (max-width 40em)
    width 100%

  button
    margin 0.5em
    min-width 2em
    min-height 2em
    width 3em
    height 3em
    display inline-block
    vertical-align middle
    border-radius 2em

  #d-pad
    height 150px
    width 150px
    display inline-block
    position relative
    vertical-align middle

    .d-pad-button
      position absolute
      margin 0
      min-height 0
      min-width 0
      height 50px
      width 50px
      padding 0
      background-color black
      border-color transparent
      color #444
      font-size 36px
      text-align center
      border-radius 0
      border-bottom-right-radius 5px
      border-bottom-left-radius 5px
      cursor pointer
      &:active
        background-color #7580FA


    #up-button
      left 50px
      transform rotate(180deg)

    #left-button
      top 50px
      left 0
      transform rotate(90deg)

    #right-button
      top 50px
      left 100px
      transform rotate(270deg)

    #down-button
      left 50px
      top 100px

    #middle-part
      position absolute
      height 50px
      width 50px
      top 50px
      left 50px
      background-color black
      &:before
        content ""
        position absolute
        height 25px
        width 25px
        left 5px
        top 5px
        margin 7px 0 0 7px
        border-right 1px solid #999
        border-bottom 1px solid #999
        border-radius 50%
        //background-color #ccc

  .a-b-btns
    float right
    margin-top 40px
    @media (max-width 40em)
      margin-top 47px
    #a-btn, #b-btn
      background rgb(216, 47, 47)
      border 2px outset #A04747
      color white
      &:active
        background-color #7580FA
      &:after
        color black
        top 40px
        position relative

    #a-btn:after
      content "A"
    #b-btn:after
      content "B"

  .gp-dismiss-instruct
    display block
    bottom 0
    position absolute
    width 90%
    text-align right
