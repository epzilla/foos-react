@require '../../bower_components/bootstrap/dist/css/bootstrap.css'
@require '../../bower_components/fontawesome/css/font-awesome.css'
@require 'variables'
@require 'helpers'
@require 'bootstrap_overrides'

*
  box-sizing border-box

body
  overflow-y scroll
  -webkit-overflow-scrolling touch
  padding-top 60px
  font-family mainFont
  
// Radio button hack
input[type=radio]
  position absolute
  top -9999px
  left -9999px

label[for="by-player"]
  cursor pointer
  text-align center
  font-family sans-serif
  font-size 14px
  font-weight 300
  color #aaa
  line-height 40px
  height 40px
  min-width 100px
  float left

label[for="by-team"]
  cursor pointer
  text-align center
  font-family sans-serif
  font-size 14px
  font-weight 300
  color #aaa
  line-height 40px
  height 40px
  min-width 100px
  float left

input#by-player[type=radio]:checked
  & ~ label[for="by-player"]
    border-bottom 5px solid synapseBlue
    font-weight bold
    color lighten(black, 20%)

input#by-team[type=radio]:checked
  & ~ label[for="by-team"]
    border-bottom 5px solid synapseBlue
    font-weight bold
    color lighten(black, 20%)

@media (min-width 992px)
  .main-table
    padding-right 35px
    
.row
  &.tall
    min-height 3.5em
  &.stepper
    font-weight bolder
    border-radius 15px
    margin-bottom 1em
    padding 0
    font-size 1.5em
    
.splash
  text-align center
  margin 10% 0 0 0
  .message
    font-size 5em
    line-height 1.5em
    -webkit-text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-shadow rgba(0, 0, 0, 0.5) 0 0 15px
    text-transform uppercase
  .fa-spinner
    text-align center
    display inline-block
    font-size 5em
    margin-top 50px

.page-host
  position absolute
  left 0
  right 0
  top 50px
  bottom 0
  overflow-x hidden
  overflow-y auto
  padding-top 20px

.winning-score, .winning-score h2
  font-weight bolder !important

.losing-score
  color #888

.current
  border-bottom 4px solid synapseBlue
  background linear-gradient(#eee, white)
  background linear-gradient(white, #eee)

.heads:before, .heads-form:before
  background-color black
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.tails:before, .tails-form:before
  background-color tailsYellow
  border 1px solid #999
  width 25px
  height 25px
  position absolute
  left -20%
  top 40%
  content ''

.heads-form
  background-color black
  color white
  font-size 1.25em

.tails-form
  background-color tailsYellow
  font-size 1.25em

.heads-stepper
  background-color black
  color white
  font-weight bolder
  border 4px solid black
  .btn-expand
    background-color black

.tails-stepper
  background-color tailsYellow
  color black
  font-weight bolder
  border 4px solid #CDCDCD
  .btn-expand
    background-color tailsYellow

.btn-expand
  width 100%
  height 100%
  height 5.25em
  padding 0
  border-radius 10px
  i
    &.fa
      font-size 3em

.heads-stepper .btn-expand:hover, .heads-stepper .btn-expand:focus
  background-color #333
  color white

.tails-stepper .btn-expand:hover, .tails-stepper .btn-expand:focus
  background-color rgb(215, 197, 18)
  color black
  
.final-box-score
  max-width 750px !important
  margin 0 auto
  
.series-history, .recent-matches
  font-size 28px
  width 65%
  margin 0 auto
  h3
    font-size 32px
  h4
    font-size 28px
    font-weight bolder !important
  .footnote
    font-style italic
    font-size 20px
    color silver
  @media (max-width 1050px)
    width 75%
  @media (max-width 925px)
    width 90%
  @media (max-width 825px)
    width 100%
  @media (max-width 675px)
    font-size 20px
    h3
      font-size 24px
    h4
      font-size 20px
    .footnote
      font-size 14px
  @media (max-width 550px)
    font-size 16px
    margin 0 auto
    h3
      font-size 18px
    h4
      font-size 16px
    .footnote
      font-size 12px

@media(max-width 550px)
  .page-host
    top 30px
  .stepper
    h3, .h3
      font-size 18px !important
      
.score-flash
  background-color rgb(197, 51, 8)
  h2
    color white
    animation flash 1s linear infinite
  
@keyframes flash
 from 
   opacity 1.0
 to
  opacity 0.5