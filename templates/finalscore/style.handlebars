@import url("//fonts.googleapis.com/css?family=Lato:300,400,700,900,400italic");

.scoreboard {
  background-color: #fff;
  width: 400px;
  margin: 0 auto;
  padding-top: 10px;
}

* {
  box-sizing: border-box;
  font-family: 'Lato', 'Helvetica Neue', HelveticaNeue, Helvetica, Arial, sans-serif;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  text-align: center;
}

div {
  display: block;
}

*:before, *:after {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.numbers-row, .numbers-row h3, .numbers-row h5 {
  height: 20px;
  font-weight: bolder;
  margin-bottom: 10px;
}

.heads-row, .tails-row,
.heads-row h3, .tails-row h3,
.heads-row h5, .tails-row h5 {
  height: 30px;
}

.numbers-row h3, .tails-row h3, .heads-row h3,
.numbers-row h5, .tails-row h5, .heads-row h5 {
  display: inline-block;
  float: left;
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
}

.numbers-row h3, .tails-row h3, .heads-row h3 {
  width: 50%;
}

.numbers-row h5, .tails-row h5, .heads-row h5 {
  width: 16.66%;
}